
public class Hourglass {
	public static void main (String[] args) {
		printBase();
		topHalf();
	}
	
	public static void topHalf(){
		for (int i =1; i <= 4; i++){
			for (int j = 1; j <=i; j++){
				System.out.print (" ");
			}
			System.out.print("\\");
		}
	}
	
	public static void printBase(){
		System.out.print("|");
		for (int i = 1; i <= 10; i++){
			System.out.print("\"");
		}
		System.out.println("|");
	}
}
